<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_from_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="From"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_from_date"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_from_title"
        app:srcCompat="@drawable/ic_date_range_black_24dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_from_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="date"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/imageview_from_date"
        app:layout_constraintTop_toTopOf="@+id/imageview_from_date"
        tools:text="from date"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_from_time"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/imageview_from_date"
        app:srcCompat="@drawable/ic_outline_access_time_24px"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_from_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_from_time"
        app:layout_constraintTop_toTopOf="@+id/imageview_from_time"
        tools:text="from time"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_to_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="datetime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageview_from_time"
        app:layout_constraintTop_toTopOf="@+id/imageview_to_time"
        tools:text="to time"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_to_time"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/imageview_to_date"
        app:srcCompat="@drawable/ic_outline_access_time_24px"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_to_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="datetime"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageview_from_date"
        app:layout_constraintTop_toTopOf="@+id/imageview_to_date"
        tools:text="to date"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_to_date"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_from_title2"
        app:srcCompat="@drawable/ic_date_range_black_24dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_from_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_from_date"
        tools:text="To"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>