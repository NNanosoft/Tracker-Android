<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:overScrollMode="never"
            android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/navbar_height"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_automaticTracking"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/setting_title_text_size"/>

        <TextView
            android:id="@+id/tracking_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/setting_item_padding"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/setting_text_size"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/tracking_none"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/autotracking_disabled_description"
                android:src="@drawable/ic_close_black_24dp"
                android:tint="@color/textDisabled"/>

            <ImageView
                android:id="@+id/tracking_onfoot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/tracking_none"
                android:contentDescription="@string/autotracking_onfoot_description"
                android:src="@drawable/ic_directions_walk_black_24dp"
                android:tint="@color/textDisabled"/>

            <ImageView
                android:id="@+id/tracking_always"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/tracking_onfoot"
                android:contentDescription="@string/autotracking_onfootvehicle_description"
                android:src="@drawable/ic_directions_car_black_24dp"
                android:tint="@color/textDisabled"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/setting_item_padding"
            android:text="@string/settings_automaticUpload"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/setting_title_text_size"/>

        <TextView
            android:id="@+id/autoupload_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/setting_item_padding"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/setting_text_size"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/autoupload_disabled"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/autoupload_disabled_description"
                android:src="@drawable/ic_close_black_24dp"
                android:tint="@color/textDisabled"/>

            <ImageView
                android:id="@+id/autoupload_wifi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/autoupload_disabled"
                android:contentDescription="@string/autoupload_wifi_description"
                android:src="@drawable/ic_network_wifi_24dp"
                android:tint="@color/textDisabled"/>

            <ImageView
                android:id="@+id/autoupload_always"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/autoupload_wifi"
                android:contentDescription="@string/autoupload_always_description"
                android:src="@drawable/ic_autorenew_black_24dp"
                android:tint="@color/textDisabled"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/setting_item_padding"
            android:text="@string/settings_playGames"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/setting_title_text_size"/>

        <Button
            android:id="@+id/play_loginButton"
            style="@style/SettingsButton"
            android:text="@string/settings_playGamesLogin"
            android:textSize="@dimen/setting_text_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/dividerColor"/>

        <Button
            android:id="@+id/play_achievements"
            style="@style/SettingsButton"
            android:text="@string/achievements"
            android:textSize="@dimen/setting_text_size"/>


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/setting_item_padding"
            android:text="@string/settings_track"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/setting_title_text_size"/>

        <Switch
            android:id="@+id/switchTrackWifi"
            style="@style/SettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/setting_item_padding"
            android:paddingTop="@dimen/setting_item_padding"
            android:text="@string/settings_track_wifi"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/dividerColor"/>

        <Switch
            android:id="@+id/switchTrackCell"
            style="@style/SettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/setting_item_padding"
            android:paddingTop="@dimen/setting_item_padding"
            android:text="@string/settings_track_cell"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/dividerColor"/>

        <Switch
            android:id="@+id/switchTrackNoise"
            style="@style/SettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/setting_item_padding"
            android:paddingTop="@dimen/setting_item_padding"
            android:text="@string/settings_track_noise"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/other"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/setting_title_text_size"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_default_map_overlay"
                android:layout_centerVertical="true"
                />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/setting_map_overlay_spinner"
                android:paddingStart="@dimen/setting_item_padding"
                android:paddingEnd="@dimen/setting_item_padding"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/dividerColor"/>

        <Switch
            android:id="@+id/switchNotifications"
            style="@style/SettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/setting_item_padding"
            android:paddingTop="@dimen/setting_item_padding"
            android:text="@string/settings_allow_notifications"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/dividerColor"/>

        <Button
            android:id="@+id/other_clear"
            style="@style/SettingsButton"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/settings_clear"
            />

        <TextView
            android:id="@+id/versionNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textSize="@dimen/secondary_text_size"/>
    </LinearLayout>
</ScrollView>