<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

        <TextView
            android:id="@+id/tracking_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_automaticTracking"
            android:textColor="@color/textSecondary"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tracking_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tracking_title"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <RelativeLayout
            android:id="@+id/tracking_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tracking_description"
            android:gravity="center">

            <ImageView
                android:id="@+id/tracking_none"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_close_black_24dp"
                android:tint="@color/textSecondary"/>

            <ImageView
                android:id="@+id/tracking_onfoot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/tracking_none"
                android:src="@drawable/ic_directions_walk_black_24dp"
                android:tint="@color/textSecondary"/>

            <ImageView
                android:id="@+id/tracking_always"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/tracking_onfoot"
                android:src="@drawable/ic_directions_car_black_24dp"
                android:tint="@color/textSecondary"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/autoupload_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tracking_layout"
            android:paddingTop="15dp"
            android:text="@string/settings_automaticUpload"
            android:textColor="@color/textSecondary"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/autoupload_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/autoupload_title"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <RelativeLayout
            android:id="@+id/autoupload_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/autoupload_description"
            android:gravity="center">

            <ImageView
                android:id="@+id/autoupload_disabled"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_close_black_24dp"
                android:tint="@color/textSecondary"/>

            <ImageView
                android:id="@+id/autoupload_wifi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/autoupload_disabled"
                android:src="@drawable/ic_network_wifi_24dp"
                android:tint="@color/textSecondary"/>

            <ImageView
                android:id="@+id/autoupload_always"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/autoupload_wifi"
                android:src="@drawable/ic_autorenew_black_24dp"
                android:tint="@color/textSecondary"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/play_loginTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoupload_layout"
            android:paddingTop="15dp"
            android:text="@string/settings_playGames"
            android:textColor="@color/textSecondary"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/play_loginButton"
            style="@style/SettingsButton"
            android:layout_below="@id/play_loginTitle"
            android:text="@string/settings_playGamesLogin"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/play_loginButton"
            android:background="@color/cardBackground"/>

        <Button
            android:id="@+id/play_achievements"
            style="@style/SettingsButton"
            android:layout_below="@+id/play_loginButton"
            android:text="@string/achievements"
            />


        <TextView
            android:id="@+id/tracker_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_achievements"
            android:text="@string/settings_track"
            android:textColor="@color/textSecondary"
            android:textSize="18sp"
            android:paddingTop="@dimen/setting_item_padding"
            android:paddingBottom="@dimen/setting_item_padding"/>

        <Switch
            android:id="@+id/switchTrackWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tracker_title"
            android:paddingTop="@dimen/setting_item_padding"
            android:paddingBottom="@dimen/setting_item_padding"
            android:text="@string/settings_track_wifi"/>


        <Switch
            android:id="@+id/switchTrackCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/switchTrackWifi"
            android:paddingTop="@dimen/setting_item_padding"
            android:paddingBottom="@dimen/setting_item_padding"
            android:text="@string/settings_track_cell"/>

        <Switch
            android:id="@+id/switchTrackPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/switchTrackCell"
            android:paddingTop="@dimen/setting_item_padding"
            android:paddingBottom="@dimen/setting_item_padding"
            android:text="@string/settings_track_pressure"/>

        <Switch
            android:id="@+id/switchTrackNoise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/switchTrackPressure"
            android:paddingTop="@dimen/setting_item_padding"
            android:paddingBottom="@dimen/setting_item_padding"
            android:text="@string/settings_track_noise"/>

        <TextView
            android:id="@+id/other_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switchTrackNoise"
            android:paddingTop="15dp"
            android:text="@string/other"
            android:textColor="@color/textSecondary"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/other_clear"
            style="@style/SettingsButton"
            android:layout_below="@+id/other_title"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/settings_clear"
            />

        <TextView
            android:id="@+id/versionNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/other_clear"
            android:paddingBottom="64dp"
            android:paddingTop="15dp"
            android:textSize="18sp"/>
    </RelativeLayout>
</ScrollView>