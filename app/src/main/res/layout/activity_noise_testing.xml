<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/status_bar_height_and_padding"
    tools:context="com.adsamcik.signalcollector.activities.NoiseTestingActivity">

    <TextView
        android:id="@+id/noiseTestAverage"
        style="@style/SettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AVERAGE NOISE: "
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/SettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOISE2"
        app:layout_constraintLeft_toRightOf="@+id/noiseTestAverage"/>

    <TextView
        android:id="@+id/noiseTestPocket"
        style="@style/SettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POCKET NOISE: "
        app:layout_constraintTop_toBottomOf="@+id/noiseTestAverage"/>

    <TextView
        style="@style/SettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOISE2"
        app:layout_constraintLeft_toRightOf="@+id/noiseTestPocket"
        app:layout_constraintTop_toBottomOf="@+id/noiseTestAverage"/>

    <SeekBar
        android:id="@+id/noiseTestSampleIntervalSeeker"
        style="@style/SettingsItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/noiseTestStartStopButton"/>

    <Button
        android:id="@+id/noiseTestStartStopButton"
        style="@style/SettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
