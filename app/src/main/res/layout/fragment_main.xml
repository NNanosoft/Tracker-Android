<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".Fragments.FragmentMain">

    <RelativeLayout
        android:id="@+id/trackerHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#424242"
        android:elevation="2dp"
        android:padding="@dimen/main_data_padding">

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/textActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:gravity="bottom"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/textAccuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textPosition"
            android:gravity="bottom"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/textPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:lineSpacingExtra="7dp"
            android:text="@string/main_position"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trackerWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackerHeader"
        android:layout_marginTop="10dp"
        android:background="#424242"
        android:elevation="2dp"
        android:padding="@dimen/main_data_padding"
        >

        <TextView
            android:id="@+id/textWifiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/main_wifi_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#9e9e9e"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textWifiCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textWifiTitle"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trackerCells"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackerWifi"
        android:layout_marginTop="10dp"
        android:background="#424242"
        android:elevation="2dp"
        android:padding="@dimen/main_data_padding">

        <TextView
            android:id="@+id/textCellTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_cell_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#9e9e9e"
            android:textIsSelectable="false"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textCurrentCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textCellTitle"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/textCells"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textCurrentCell"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trackerOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackerCells"
        android:layout_marginTop="10dp"
        android:background="#424242"
        android:elevation="2dp"
        android:padding="@dimen/main_data_padding">

        <TextView
            android:id="@+id/textPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRESSURE"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/textCollected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textPressure"
            android:text="COLLECTED"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </RelativeLayout>

</RelativeLayout>
