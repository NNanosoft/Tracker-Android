<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/container_map"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:animateLayoutChanges="true"
                                             android:focusable="true"
                                             android:focusableInTouchMode="true">

    <FrameLayout
        android:id="@+id/map_menu_parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="@dimen/edge_margin"
        android:layout_marginStart="@dimen/edge_margin"
        android:layout_marginTop="39dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="bottom"
        android:orientation="vertical"
        android:translationZ="3dp"
        app:layout_constraintBottom_toBottomOf="@id/map_ui_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/map_ui_parent"
        tools:ignore="UselessLeaf"/>

    <LinearLayout
        android:id="@+id/map_ui_parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="140dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/edge_margin"
        android:translationZ="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.adsamcik.draggable.DraggableImageButton
            android:id="@+id/map_menu_button"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/background_map_menu"
            android:elevation="4dp"
            android:src="@drawable/ic_arrow_upward_black_24dp"
            app:axis="Y"
            app:interpolator="Decelerate"
            app:targetAnchor="top"
            app:targetTranslationZ="4dp"
            app:targetView="@id/map_ui_parent"/>

        <LinearLayout
            android:id="@+id/layout_map_controls"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/cardview_light_background"
            android:elevation="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edittext_map_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/map_search"
                android:imeOptions="actionSearch"
                android:inputType="text|textNoSuggestions"
                android:paddingBottom="8dp"
                android:paddingEnd="56dp"
                android:paddingStart="@dimen/edge_margin"
                android:paddingTop="8dp"
                android:textColor="?android:textColorPrimary"
                android:textColorHint="?android:textColorSecondary"
                android:textSize="16sp"/>

            <ImageButton
                android:id="@+id/button_map_my_location"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_gps_fixed_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/button_map_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_search_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>